{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*"
  ],
}